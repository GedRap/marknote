<div class="row">
	<div class="col-md-8">
		<div class="row">
			<div class="col-md-12">
				<%= form_tag("/notes", method: "post") do %>
					<h4>New Note</h4>
					<div class="form-group">
						<%= text_field_tag(:title, "", class: "form-control", placeholder: "Name (optional)") %>
					</div>
					
					<div class="form-group">
						<%= text_area_tag(:source, "", class: "form-control", rows: 10, placeholder: "Markdown") %>
					</div>
					
					<div class="form-group">
						<%= text_field_tag(:tags, "", class: "form-control", placeholder: "Comma separated tags") %>
					</div>

					<div class="pull-right margin-top-15">
						<button type="submit" class="btn btn-success">Save</button>
					</div>
				<% end %>
			</div>
		</div>
		
	</div>
	<div class="col-md-4">
		<div class="row">
			<div class="col-md-12">
				<h4>Recent Notes <a href="/browse/notes">(view all)</a></h4>
				<ul class="notes-list">
				<% @notes.each do |note| %>
					<li><a href="/notes/<%= note.id %>"><%= note.title %></a><p class="timestamp"><%= note.created_at %>, Views: <%= note.views %></p></li>
				<% end %>
				</ul>
			</div>
			<div class="col-md-12">
				<h4>Tags With Notes</h4>
				<ul class="notes-list">
					<% @tags.each do |tag| %>
						<li><a href="/tag/<%= tag.id %>/notes"><%= tag.name %></a></li>
					<% end %>
				</ul>
			</div>
		</div>
		
	</div>
</div>