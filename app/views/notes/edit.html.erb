<div class="row">
	<div class="col-md-12">
		<h3>Editing <%= @note.title %></h3>
	</div>
	<div class="col-md-8">
		<div class="row">
			<div class="col-md-12">
				<%= form_tag("/note/save/#{@note.id}", method: "post") do %>
					<div class="form-group">
						<%= text_field_tag(:title, "", class: "form-control", placeholder: "Name (optional)", :value => @note.title) %>
					</div>
					<div class="form-group">
						<%= text_field_tag(:tags, "", class: "form-control", placeholder: "", :value => @tags_joined) %>
					</div>
					<div class="form-group">
						<%= text_area_tag(:source, @note.source, class: "col-md-12", rows: 10, placeholder: "Markdown") %>
					</div>
					<div class="pull-right margin-top-15">
						<button type="submit" class="btn btn-success">Save</button>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<div class="alert alert-info">Created at <%= @note.created_at %></div>
		<div class="alert alert-info">Viewed <%= @note.views %> times</div>
	</div>
</div>